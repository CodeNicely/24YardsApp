<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.codenicely.codenicely.codenicely.codenicely.codenicely.codenicely.codenicely.a24yards.a24yards.sort.view.SortFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cart_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/sort_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radio_relevance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relevance"
                    android:textSize="23dp"
                    android:padding="20dp"/>

                <RadioButton
                    android:id="@+id/radio_priceh2l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price High-Low"
                    android:textSize="23dp"
                    android:padding="20dp"/>
                <RadioButton
                    android:id="@+id/radio_pricel2h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price Low-High"
                    android:textSize="23dp"
                    android:padding="20dp"/>
                <RadioButton
                    android:id="@+id/radio_name_asc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Ascending"
                    android:textSize="23dp"
                    android:padding="20dp"/>
                <RadioButton
                    android:id="@+id/radio_name_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Descending"
                    android:textSize="23dp"
                    android:padding="20dp"/>

            </RadioGroup>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/sort_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:background="#0288D1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
